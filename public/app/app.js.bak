var celebrityGame = angular.module('celebrityGame', []);

function gameController($scope, $http, $cookies) {

  $scope.createGame = function() {
    $http.post('/api/games', null )
    .success(function(data) {
      console.log(data);
      $cookies.put('game', data);
      var shortId = $cookies.get('game')['shortId'];
      console.log(shortId);
    })
    .error(function(data) {
      console.log('Error: ' + data );
    })
  }

}
